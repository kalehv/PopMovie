<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Visibility" parent="AppTheme" />
    <style name="AppTheme.Visibility.Visible" parent="AppTheme.Visibility">
        <item name="android:visibility">visible</item>
    </style>
    <style name="AppTheme.Visibility.Invisible" parent="AppTheme.Visibility">
        <item name="android:visibility">invisible</item>
    </style>
    <style name="AppTheme.Visibility.Gone" parent="AppTheme.Visibility">
        <item name="android:visibility">gone</item>
    </style>

</resources>
