<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Visibility" parent="AppTheme" />
    <style name="AppTheme.Visibility.Visible" parent="AppTheme.Visibility">
        <item name="android:visibility">visible</item>
    </style>
    <style name="AppTheme.Visibility.Invisible" parent="AppTheme.Visibility">
        <item name="android:visibility">invisible</item>
    </style>
    <style name="AppTheme.Visibility.Gone" parent="AppTheme.Visibility">
        <item name="android:visibility">gone</item>
    </style>

    <!--Launch Screen-->
    <style name="AppTheme.LaunchScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!--Bottom Navigation Tab-->
    <style name="AppTheme.BottomNavigation" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabMaxWidth">@dimen/bottom_nav_tab_max_width</item>
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">@dimen/bottom_nav_tab_padding_sides</item>
        <item name="tabPaddingEnd">@dimen/bottom_nav_tab_padding_sides</item>
        <item name="tabTextAppearance">@style/AppTheme.BottomNavigation.Text</item>
        <item name="tabSelectedTextColor">@color/colorTextPrimary</item>
    </style>
    <style name="AppTheme.BottomNavigation.Text" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/bottom_nav_tab_text_size_inactive</item>
    </style>

</resources>
